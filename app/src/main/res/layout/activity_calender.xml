<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".Calender">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="70dp"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".calender"
        android:background="@drawable/topborderradius">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Your Appointment"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <CalendarView android:id="@+id/calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"/>
    <ImageView android:layout_width="286dp"
        android:layout_height="232dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="438dp"
        android:layout_marginBottom="61dp"
        android:src="@drawable/img">
    </ImageView>
    <TextView android:id="@+id/dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="186dp"
        android:layout_marginBottom="38dp"
        android:text=""/>
</RelativeLayout>